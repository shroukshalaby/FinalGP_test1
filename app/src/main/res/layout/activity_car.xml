<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.finalgp_test1.CarActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_car"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/gradient_toolbar"/>

    <TextView
        android:id="@+id/search_car_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Cars"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20sp"/>

        <TextView
            android:id="@+id/fromTV_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"/>

        <Spinner
            android:id="@+id/FromCountry_spinner"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/transparent_edge"
            android:entries="@array/FromSpinner"
            android:layout_below="@id/fromTV_car"
            android:layout_marginLeft="20dp"/>

       <TextView
            android:id="@+id/toTV_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/FromCountry_spinner"/>

        <Spinner
            android:id="@+id/toCountry_spinner"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/transparent_edge"

            android:layout_below="@id/toTV_car"
            android:layout_marginLeft="20dp"
            android:entries="@array/ToSpinner"/>


    <TextView
            android:id="@+id/DeptTV_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Depart"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:textAllCaps="false"/>

        <CalendarView
            android:id="@+id/depart_ET"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:layout_below="@id/DeptTV_car"/>
        <Button
            android:id="@+id/searchCarBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="430dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/orangesliderr"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"/>


</RelativeLayout>
